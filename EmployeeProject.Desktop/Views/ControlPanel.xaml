<UserControl x:Class="EmployeeProject.Desktop.Views.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeProject.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Dolgozók száma:"/>
            <Label Content="{Binding NumberOfEmployees}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Fizetett dolgozók száma:"/>
            <Label Content="{Binding NumberOfEmployeesWithSalary}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Fizetetlen dolgozók száma:"/>
            <Label Content="{Binding NumberOfEmployeesWithoutSalary}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Átlagos fizetés:"/>
            <Label Content="{Binding AveragePayment}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
